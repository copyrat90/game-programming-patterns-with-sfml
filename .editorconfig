
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Data interchange files
[*.{xml,xaml,yml,yaml,json}]
indent_style = space
indent_size = 2

# C/C++ source files
[*.{c,cxx,cpp,cc,h,hxx,hpp,hh,inl,tpp}]
indent_style = space
indent_size = 4

# CMake
[{CMakeLists.txt,*.cmake}]
indent_style = space
indent_size = 4

# GNU Make
[{Makefile,*.mk,*.mak}]
indent_style = tab
trim_trailing_whitespace = false
